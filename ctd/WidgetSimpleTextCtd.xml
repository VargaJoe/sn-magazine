<ContentType name="WidgetSimpleText" parentType="Widget" handler="SenseNet.ContentRepository.Folder" xmlns="http://schemas.sensenet.com/SenseNet/ContentRepository/ContentTypeDefinition">
  <DisplayName>WidgetSimpleText</DisplayName>
  <Description></Description>
  <Icon>Folder</Icon>
  <AllowedChildTypes>
    Folder,File
  </AllowedChildTypes>
  <Fields>
    <Field name="Title" type="ShortText">
      <DisplayName>Title</DisplayName>
      <Description>Component title</Description>
    </Field>
    <Field name="TitleType" type="Choice">
      <DisplayName>Type of title</DisplayName>
      <Description></Description>
      <Configuration>
        <AllowMultiple>false</AllowMultiple>
        <AllowExtraValue>false</AllowExtraValue>
        <Options>
          <Option value="h1" selected="true">Heading 1</Option>
          <Option value="h2">Heading 2</Option>
          <Option value="h3">Heading 3</Option>
          <Option value="h4">Heading 4</Option>
          <Option value="h5">Heading 5</Option>
          <Option value="h6">Heading 6</Option>
        </Options>
        <ReadOnly>false</ReadOnly>
        <Compulsory>false</Compulsory>
        <DefaultValue>h1</DefaultValue>
      </Configuration>
    </Field>
    <Field name="TitleAndDescriptionAlign" type="Choice">
      <DisplayName>Title and description align</DisplayName>
      <Description></Description>
      <Configuration>
        <AllowMultiple>false</AllowMultiple>
        <AllowExtraValue>false</AllowExtraValue>
        <Options>
          <Option value="left" selected="true">left</Option>
          <Option value="center">center</Option>
          <Option value="right">right</Option>
        </Options>
        <ReadOnly>false</ReadOnly>
        <Compulsory>false</Compulsory>
        <DefaultValue></DefaultValue>
      </Configuration>
    </Field>
    <Field name="ButtonLeftText" type="ShortText">
      <DisplayName>Left button text</DisplayName>
      <Description></Description>
    </Field>
    <Field name="ButtonLeftUrl" type="ShortText">
      <DisplayName>Left button URL</DisplayName>
      <Description></Description>
    </Field>
    <Field name="ButtonRightText" type="ShortText">
      <DisplayName>Right button text</DisplayName>
      <Description></Description>
    </Field>
    <Field name="ButtonRightUrl" type="ShortText">
      <DisplayName>Right button URL</DisplayName>
      <Description></Description>
    </Field>
    <Field name="ButtonAlign" type="Choice">
      <DisplayName>Buttons align</DisplayName>
      <Description></Description>
      <Configuration>
        <AllowMultiple>false</AllowMultiple>
        <AllowExtraValue>false</AllowExtraValue>
        <Options>
          <Option value="left" selected="true">left</Option>
          <Option value="center">center</Option>
          <Option value="right">right</Option>
        </Options>
        <ReadOnly>false</ReadOnly>
        <Compulsory>false</Compulsory>
        <DefaultValue>1</DefaultValue>
      </Configuration>
    </Field>
    <Field name="ComponentDescription" type="RichText">
      <DisplayName>Description</DisplayName>
      <Description>Component description</Description>
      <Configuration>
        <TextType>RichText</TextType>
      </Configuration>
    </Field>
    <Field name="ComponentContent" type="RichText">
      <DisplayName>Content</DisplayName>
      <Description>Component content</Description>
      <Configuration>
        <TextType>RichText</TextType>
      </Configuration>
    </Field>
			<Field name="PortletZone" type="ShortText">
			<DisplayName>PortletZone</DisplayName>
			<Description>Portlet Zone</Description>
		</Field>
  </Fields>
</ContentType>